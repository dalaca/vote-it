<h3>Viewing Post <%= @post.title %></h3>
<br/>

<%= link_to @post.title, fix_url(@post.url) %>
posted by <%= @post.username %> on <%= @post.created_at %>

<%= render 'shared/errors', obj: @comment %>
<br/>
Comments:
<% @post.comments.each do |comment| %>
<li>
	<%= comment.body %>
	
</li>
	<% end %> 
<br/>

<%= form_for [@post, @comment] do |f| %>
	<%= f.label :body %>
	<br/>
	<%= f.text_area :body %>
	<br/>
	<%= f.submit "New comment" %>

	<% end %> 
